<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseThemeStyle" parent="Theme.SpaceCos">
        <item name="textColorPrimary">@color/black</item>
        <item name="textColorConnected">@color/yellow_700</item>
        <item name="themeColorOnPrimary">@color/white</item>
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="themeColorPrimary">@color/yellow_500</item>
        <item name="bottomAppBarColor">@color/yellow_500</item>
        <item name="fabColor">@color/gray_700</item>
        <item name="fabTint">@color/yellow_200</item>
        <item name="fontFamily">@font/artifika</item>
        // 1. Выберите основной шрифт для вашего приложения и используйте его
        // Реализовала еще на прошлых уроках.
        <item name="android:fontFamily">@font/artifika</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/AppShapeAppearance.LargeComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>
        <item name="materialCardViewStyle">@style/AppCard</item>
    </style>

    <style name="BaseThemeStyle.Splash">
        <item name="android:windowBackground">@drawable/splash_background_drawable</item>
    </style>

    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/view_corner</item>
    </style>

    <style name="AppShapeAppearance.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/view_corner</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/view_corner</item>
    </style>

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="SpaceThemeStyle" parent="BaseThemeStyle">
        <item name="colorSecondary">@color/space_200</item>
        <item name="colorSecondaryVariant">@color/space_600</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="textColorSecondary">@color/color_gray</item>
        <item name="android:textColorSecondary">?textColorSecondary</item>
        <item name="android:textColorPrimary">?textColorPrimary</item>
        <item name="textColorPrimary">@color/white</item>
        <item name="textColorConnected">@color/white</item>
        <item name="textColorDisConnected">@color/color_gray</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorPrimaryVariant">?themeColorPrimary</item>
        <item name="themeColorPrimary">@color/space_700</item>
        <item name="bottomAppBarColor">@color/space_500</item>
        <item name="fabColor">@color/white</item>
        <item name="fabTint">@color/space_700</item>
    </style>

</resources>